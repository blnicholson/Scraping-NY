<div class="ui huge message ">
    <h1 class="ui huge centered aligned header">Video Game News</h1>


</div>
<br>
<br>
<div class="ui grid">
    <div class="column">
        <div id="allCards" class="ui stacking three cards">
            {{#each data}}
            <div class="ui card">
                <div id="color" class="ui slide masked reveal image">
                    <img src="{{this.image}}" class="visible content">
                    <br>
                    <br>
                    <div class="center aligned hidden content"><strong>{{this.summary}}</strong>
                        <br>
                        <br>
                        <h3 class="extra hidden content">User comments</h3>
                        <div id="userComments"></div>
                    </div>
                </div>
                <div id="title" class=" center aligned content">
                    <h3> {{this.title}} </h3>


                </div>

                <div class="extra content">
                    <button id="commentButton"  class=" ui button">Comment</button>
                    <button id="showComments" class="ui button">Show Comments</button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <!--Modal for comment form -->
    <div class="ui modal" id="modal1">
        <div class="header">Please Leave a Comment</div>
        <div class="content">
            <div class="form2">
                <form class="ui form">
                    <div class="field">
                        <label>Name</label>
                        <input id="name" type="text" name="Name" placeholder="Name">
                    </div>
                    <div class="field">
                        <label>Short Text</label>
                        <textarea id="text" rows="5"></textarea>
                    </div>
                    <button id="commentSubmit" class="ui button" type="submit">Submit Comment</button>
                </form>
            </div>
        </div>
        <!--Modal to show comments -->
        <div class="ui modal" id="modal2">
            <div class="header">Comments</div>
            <div class="content">
                <div class="form2">
                    <>This is where a comment will go</p>
                </div>
            </div>





        </div>
    </div>