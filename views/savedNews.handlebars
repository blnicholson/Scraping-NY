{{>header}}
<body id="newsBody">

<div class="ui huge message" id="header">
    <h1 class="ui huge centered aligned header" id=headerTwo>Video Game News</h1>

<div class="ui animated button" id="home" tabindex="0">
      <a href = "/">
      <div class="visible content">Home</div>
      <div class="hidden content">
        <i class="home icon"></i>
      </div>
      </a>
    </div>

    <div class="ui animated button"  tabindex="0">
      <a href="/news">
        <div class="visible content">Back to Game News</div>
        <div class="hidden content">
          <i class="sign in alternate icon"></i>
        </div>
      </a>
    </div>


  </div>
<br>
<br>
{{#each savedNews}}
<div class="ui items">
  <div class="item">
    <div class="image">
      <img src="{{this.image}}">
    </div>
    <div class="content">
      <a class="header" id="titleText" href="https://www.gamespot.com{{this.url}}" </a>{{this.title}} </a> <div class="meta">
    </div>
    <div class="description"id="summaryText">
      <p>{{this.summary}}</p>
      <button class="ui inverted button commentButton" data-id={{this._id}}>Leave a Comment</button>
      <button class="ui inverted button viewComment" data-id={{this.id}}>View Comment</button>
      <button class="ui inverted button unsaveArticle" data-id={{this.id}}>Unsave Article</button>
    </div>
  </div>
</div>
<br>
<br>
{{/each}}
</div>

<!--Modal for Comment Form-->
{{#each savedNews}}
<div class="ui modal modal1" id={{_id}}>
  <div class="header">Please Leave a Comment</div>
  <div class="content">
    <div class="form2">
      <form class="ui form">
        <div class="field">
          <label>Name</label>
          <input id="name_{{this._id}}" type="text" name="Name" placeholder="Name">
        </div>
        <div class="field">
          <label>Short Text</label>
          <textarea id="text_{{this._id}}" rows="5"></textarea>
        </div>
        <input type="submit" data-id={{this._id}} class="submitComment ui button" type="submit">

      </form>
    </div>
  </div>
</div>
{{/each}}

{{!-- Modal to show comments --}}
<div class="ui modal modal2">
  <div class="header">Comments</div>
  <div class="content">
    <div class="comments">
     <p>content will go here</p>
    </div>
  </div>
</div>
