{{#each data}}
<div class="ui items">
  <div class="item">
    <div class="image">
      <img src="{{this.image}}">
    </div>
    <div class="content">
      <a class="header" href="https://www.gamespot.com{{this.url}}"</a>{{this.title}}</a>
      <div class="meta">
      </div>
      <div class="description">
        <p>{{this.summary}}</p>
          <button class = "ui red basic button saveButton" data-id={{this.id}}>Save Article</button>
      </div>
    </div>
  </div>
  {{/each}}
</div>
      