{{>header}}
<body id = "newsBody">

<div class="ui huge message" id="header">
    <h1 class="ui huge centered aligned header" id = headerTwo >Video Game News</h1>
    <a href="/scrape">
    <div class = "ui animated button" tabindex="0">
      <div class= "visible content">Scrape Video Game News</div>
      <div class = "hidden content">
        <i class = "toggle off"></i>
      </div>
    </div>
    {{!-- <button class = "ui red basic button" id="scrapeButton">Scrape</button> --}}
    </a>
    {{!-- <button class = "ui red basic button" id="news">Saved News</button> --}}
    
    
</div>
